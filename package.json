{
  "name": "todos_api",
  "version": "1.0.0",
  "description": "Demo Todos API",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "lint": "tslint src/**/*.ts",
    "serve": "set NODE_ENV=production && node ./dist/server",
    "start": "npm run lint && npm run build && npm run serve",
    "start:dev": "set DEBUG=app* && ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "todos",
    "api",
    "express",
    "nodejs"
  ],
  "author": "Ilya Lisin <blacklacost@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "promise-fs": "^2.1.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.8",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  }
}
